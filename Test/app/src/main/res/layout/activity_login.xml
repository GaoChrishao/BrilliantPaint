<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:background="@drawable/gradient_2"
    android:gravity="center"
    android:orientation="vertical">


    <EditText
        android:id="@+id/editText_account"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_normal"
        android:hint="账号"
        android:inputType="numberSigned"
        android:paddingLeft="20dp"
        android:textColor="@color/LogincolorText"
        android:textColorHint="@color/LogincolorText"
        app:layout_constraintBottom_toTopOf="@+id/editText_password"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editText_password"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/edittext_normal"
        android:hint="密码"
        android:inputType="textPassword"
        android:paddingLeft="20dp"
        android:textColor="@color/LogincolorText"
        android:textColorHint="@color/LogincolorText"
        app:layout_constraintBottom_toTopOf="@+id/login_btn_login"
        app:layout_constraintDimensionRatio="5:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_account" />


    <Button
        android:id="@+id/login_btn_login"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="200dp"
        android:background="@drawable/edittext_normal_1"
        android:text="登入"
        android:fontFamily="monospace"
        android:textSize="23sp"
        android:textAllCaps="false"
        android:textColor="@color/LogincolorText"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText_password"
        app:layout_constraintVertical_bias="0.266" />

    <TextView
        android:id="@+id/login_tv_signin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="8dp"
        android:text="注册"
        android:textColor="#C6FFFFFF"
        android:fontFamily="monospace"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/login_btn_login"
        app:layout_constraintStart_toEndOf="@+id/login_btn_login" />


</androidx.constraintlayout.widget.ConstraintLayout>
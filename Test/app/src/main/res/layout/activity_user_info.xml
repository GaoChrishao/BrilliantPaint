<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivityUserInfo">

    <com.gaoch.brilliantpic.myview.CircleExp
        android:id="@+id/fragment_main_exp"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fragment_main_user_pic"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/user_pic"
        app:civ_border_color="#79ffffff"
        app:civ_border_overlay="true"
        app:civ_border_width="1dp"
        app:layout_constraintBottom_toBottomOf="@+id/fragment_main_exp"
        app:layout_constraintEnd_toEndOf="@+id/fragment_main_exp"
        app:layout_constraintTop_toTopOf="@+id/fragment_main_exp" />

    <LinearLayout
        android:id="@+id/userinfo_layout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/background_untranscened"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fragment_main_exp">

        <TextView
            android:id="@+id/userinfo_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="妙笔生画"
            android:textColor="@color/colorTitle"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/userinfo_tv_exp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:text="LV.99"
            android:textColor="@color/colorTitle" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/userinfo_layout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:background="@drawable/background_untranscened"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/userinfo_layout1">


    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >
        <LinearLayout
            android:id="@+id/fragment_main_head_bkg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="8dp"
            android:background="#00000000"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <com.gaoch.test.myview.CircleExp
                    android:id="@+id/fragment_main_exp"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/fragment_main_user_pic"
                    android:layout_width="130dp"
                    android:layout_height="130dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/user_pic"
                    app:civ_border_color="#79ffffff"
                    app:civ_border_overlay="true"
                    app:civ_border_width="1dp" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/main_layout3"
                android:background="@drawable/background_untranscened"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginTop="15dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/fragment_main_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="妙笔生画"
                    android:textColor="@color/colorTitle"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/fragment_main_tv_exp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/colorTitle"
                    android:text="LV.99" />

            </LinearLayout>

        </LinearLayout>



        <LinearLayout
            android:id="@+id/main_layout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/background_untranscened"
            android:orientation="vertical"

            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/fragment_main_head_bkg"
            tools:layout_editor_absoluteX="15dp">
            <TextView
                android:layout_gravity="center"
                android:text="风格"
                android:textColor="@color/colorTitle"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/fragment_main_btn_1"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_strange1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/fragment_main_btn_2"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_color"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/fragment_main_btn_3"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_water1"
                        android:textSize="25sp" />
                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/fragment_main_btn_7"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_maobi" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/fragment_main_btn_8"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_cartoon"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/fragment_main_btn_9"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_oil"
                        android:textSize="25sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/main_layout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/background_untranscened"
            android:orientation="vertical"

            android:padding="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/main_layout1"
            tools:layout_editor_absoluteX="15dp">
            <TextView
                android:layout_gravity="center"
                android:text="场景"
                android:textColor="@color/colorTitle"
                android:textSize="25sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/fragment_main_btn_4"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_scene1" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/fragment_main_btn_5"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_faces"
                        android:textSize="20sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_weight="1"
                    android:gravity="center">

                    <Button
                        android:id="@+id/fragment_main_btn_6"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:background="@drawable/ic_building"
                        android:textSize="25sp" />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
